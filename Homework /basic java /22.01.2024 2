/// импортировала пакет math, в конфигурации изменила аргумент на "12.42323", через терминал пропустить не удалось, такая же проблема, что и в прошлый раз
/// результат оказался 0.9897728623503022
import static java.lang.Math.cos;

public class Cos {
    public static void main(String[] args) {
        double x = Double.parseDouble(args [0]);
        double cos = cos(x);
        System.out.println(cos);

    }
}


